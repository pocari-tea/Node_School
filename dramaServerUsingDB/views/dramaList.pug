html
    head
        title= title
    head
        h2 My Favorite DramaList
        ul
            each val in list
                li=`${val.title}(${val.actor})`
        div ---------------------------------------------------------
        h2 드라마 추가
        form(action="http://localhost:8080", method="post")
            p 
                input(type="text", name="title", placeholder="드라마 제목")
                input(type="text", name="actor", placeholder="주연 배우")
            p
                input(type="submit", values="드라마 추가")